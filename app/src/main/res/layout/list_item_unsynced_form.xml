<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/myWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="match_parent"
                android:text="hello"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@color/colorYellow"
                android:textColor="@color/myBlack"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview_label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_name" />

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/textview_label_date"
                android:layout_marginTop="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_name" />

            <TextView
                android:id="@+id/textview_label_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_date" />

            <TextView
                android:id="@+id/textview_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/textview_label_latitude"
                android:layout_marginTop="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_date" />

            <TextView
                android:id="@+id/textview_label_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude:"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_latitude" />

            <TextView
                android:id="@+id/textview_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/textview_label_longitude"
                android:layout_marginTop="5dp"
                android:textColor="@color/myBlack"
                android:layout_below="@id/textview_latitude" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>